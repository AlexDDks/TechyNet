<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/users/login.css">
    <link rel="stylesheet" href="/styles/header.css">
    <link rel="stylesheet" href="/styles/footer.css">
    <script src="https://kit.fontawesome.com/fa36d49c1a.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <%- include('../partials/header.ejs') %>

    <div class="mainContainer">
        <form action="/users/login" method="POST" class="formLogin">
            <div class="formContent">
                <h2>Login</h2>
                <div class="divForm">
                    <input class="barra" type="text" name="email" placeholder="Email" value="<%= locals.old && old.email ? old.email : '' %>">
                    <div class="errorMsg">
                        <% if (locals.errors && errors.email) { %> 
                            <p class="error"><%= errors.email.msg %> <i class="fa-solid fa-circle-exclamation"></i></p>
                        <% } %>
                        <% if (locals.errors && errors.validationUser) { %> 
                            <p class="error"><%= errors.validationUser.msg %> <i class="fa-solid fa-circle-exclamation"></i></p>
                        <% } %> 
                    </div>
                </div>
                <div class="divForm">
                    <input class="barra" type="password" name="password" placeholder="Password">
                    <div class="errorMsg">
                        <% if (locals.errors && errors.password) { %> 
                            <p class="error"><%= errors.password.msg %> <i class="fa-solid fa-circle-exclamation"></i></p>
                        <% } %>
                        <% if (locals.errors && errors.validationPassword) { %> 
                            <p class="error"><%= errors.validationPassword.msg %> <i class="fa-solid fa-circle-exclamation"></i></p>
                        <% } %>                
                    </div>
                </div>
                <div class="divForm checkboxContainer">
                    <input class="checkbox" type="checkbox" name="remember" id="remember">
                    <label for="remember">Remember me</label>
                </div>
                <div class="divForm">
                    <a class="reestablecerContrasena" href="/users/resetPasswordRequest">Forgot your password?</a>
                </div>
                <div class="divForm">
                    <span class="spanRegister">Don't you have an account? </span><a class="register" href="/users/signup">Register</a>
                </div>
                <div class="divForm">
                    <button class="boton" type="submit">Log in</button>
                </div>
            </div>
        </form>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>
